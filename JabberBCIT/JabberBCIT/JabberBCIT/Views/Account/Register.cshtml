@model JabberBCIT.Models.RegisterViewModel
@{
    ViewBag.Title = "Jabber Register";
    Layout = null;
}

@Styles.Render("~/Content/css")
@Styles.Render("~/Content/register.css")


<div id="bg">
    <img src="../Images/registerBG.jpg" alt="">
</div>

<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <h1>@ViewBag.Title</h1>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "ConfirmPassword" })
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-default" value="Register" />
                </div>
            }
        </div>
    </div>
</div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
