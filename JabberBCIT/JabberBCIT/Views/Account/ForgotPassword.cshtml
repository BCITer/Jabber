@model JabberBCIT.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<div id="bg">
    <img src="~/Images/registerBG.jpg" alt="">
</div>

<div class="container" id="forgetPasswordContatiner">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            @using(Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "forget-password", role = "form" })) 
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <h1>Retrieve Password</h1>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-default" value="Email Link" />
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
