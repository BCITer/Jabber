@model JabberBCIT.Models.CreateSubForumViewModel

@{
    ViewBag.Title = "Create SubForum";
}

@Styles.Render("~/Content/createForumPost.css")

<div class="container">
    <div class="row forum">
        <div class="col-md-offset-1 col-md-10">
            @ViewBag.CreateSubForumError
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <h2>Start a new topic</h2>
                    <hr />
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default submitBtn" />
                            <button class="btn" onclick="location.href='@Url.Action("Index", "Forum")';return false;">Back to List</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
