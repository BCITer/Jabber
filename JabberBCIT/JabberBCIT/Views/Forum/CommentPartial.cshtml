@using JabberBCIT.Models
@model JabberBCIT.Models.CommentViewModel
@{
    ViewBag.Title = "CommentPartial";
}
<tr>
    <td valign="top" style="width:40px">
        <a href="#">
            <div class="vote">
                <span class="glyphicon glyphicon-chevron-up vote-icon"></span>
            </div>
        </a>
        <p class="vote-count">@Model.votes</p>
        <a href="#">
            <div class="vote">
                <span class="glyphicon glyphicon-chevron-down vote-icon"></span>
            </div>
        </a>
    </td>
    <td class="media">
        <div class="media-body">
            <h4 class="title">
                @Model.author
            </h4>
            <p>
                @Model.comment.Text
            </p>
        </div>
        <table>
            @foreach (var childCommentID in Model.childCommentIDs)
            {
                Html.RenderAction("CommentPartial", new { id = childCommentID });
            }
        </table>
    </td>
</tr>