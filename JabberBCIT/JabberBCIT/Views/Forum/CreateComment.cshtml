@model JabberBCIT.Models.Comment

@{
    ViewBag.Title = "CreateComment";
}

@Styles.Render("~/Content/createForumPost.css")

<div class="container">
    <div class="row forum">
        <div class="col-md-offset-1 col-md-10">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <h2>Submit a comment</h2>
                    <hr />
                    <div class="form-group">
                        @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Text, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default submitBtn" />
                            <button class="btn" onclick="location.href='.';return false;">Back to List</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
