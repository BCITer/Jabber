@using JabberBCIT.Models
@model PostViewModel
@{
    ViewBag.Title = "ViewThread";
}

<head>
    <!-- Bootstrap Core CSS -->
    <link href="/Content/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/Content/forum.css" rel="stylesheet">
</head>
<body style="padding-top: 0px;">
    <div id="wrapper">
        <!-- Navigation -->
        <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
        @{Html.RenderAction("SidebarPartial"); }
        <!-- /.Sidebar Menu Item -->
        <!-- /.Navigation -->

        <div id="page-wrapper">

            <div class="container-fluid">
                <!-- Page Content -->
                <!-- Page Heading -->
                <table class="table table-filter">
                    <tr>
                        <td></td>
                        <td>
                            <a href="#">
                                <div class="vote">
                                    <span class="glyphicon glyphicon-chevron-up vote-icon"></span>
                                </div>
                            </a>
                            <p class="vote-count">@Model.votes</p>
                            <a href="#">
                                <div class="vote">
                                    <span class="glyphicon glyphicon-chevron-down vote-icon"></span>
                                </div>
                            </a>
                        </td>
                        <td>
                            <br>
                            <h1 class="forum-header">
                                <b>@Model.post.PostTitle</b>
                                <br>
                                <small>@Model.post.User.UserName</small>
                            </h1>
                            <p>@Model.post.Message</p>
                        </td>
                    </tr>
                </table>
                <button type="button" class="btn pull-right" onclick="@("location.href='Reply'")">Reply to thread</button>
                <!-- ./Page Heading -->
                <!-- Comments -->
                <table>
                    @foreach (var childCommentID in Model.childCommentIDs)
                    {
                        Html.RenderAction("CommentPartial", new { id = childCommentID });
                    }
                </table>
                <!-- ./Comments -->
                <hr>

                <!-- Footer -->
                <footer>
                    <div class="row text-center">
                        <div class="col-lg-12">
                            <p>Copyright &copy; BCIT Jabber 2016</p>
                        </div>
                    </div>
                </footer>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
</body>



















